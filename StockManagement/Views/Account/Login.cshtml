@model StockManagement.Models.Users

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Stock Management</title>
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .navbar {
            background-color: #343a40;
            color: #ffffff;
            padding: 1rem;
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 1000;
        }

        .login-container {
            background-color: #ffffff;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px;
            max-width: 400px;
            width: 100%;
            margin: 100px auto 0; /* Added margin-top to avoid merging with the fixed navbar */
            padding: 2rem;
        }

        .form-group {
            margin-bottom: 1rem;
        }

            .form-group label {
                font-weight: bold;
                display: block;
                margin-bottom: .5rem;
            }

        .form-control {
            border-radius: 4px;
            border: 1px solid #ced4da;
            padding: .5rem .75rem;
            width: 100%;
            box-sizing: border-box;
        }

            .form-control:focus {
                border-color: #007bff;
                outline: none;
                box-shadow: 0 0 0 .2rem rgba(38, 143, 255, .25);
            }

        .btn {
            background-color: #007bff;
            color: #ffffff;
            border: none;
            padding: .75rem 1.5rem;
            font-size: 1rem;
            font-weight: bold;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
            text-align: center;
            box-shadow: rgba(0, 0, 0, 0.1) 0px 2px 4px;
            transition: background-color 0.3s, box-shadow 0.3s;
        }

            .btn:hover {
                background-color: #0056b3;
                box-shadow: rgba(0, 0, 0, 0.2) 0px 4px 6px;
            }

        .text-danger {
            color: #dc3545;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" >Stock Management</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                
            </div>
        </nav>
    </header>
    <div class="login-container">
        <h2>Login</h2>

        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn" />
            </div>
        </form>

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }
    </div>
</body>
</html>

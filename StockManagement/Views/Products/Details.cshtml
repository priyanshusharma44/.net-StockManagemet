@model StockManagement.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<style>
    .container {
        padding: 20px;
        max-width: 1200px;
        margin: auto;
    }

    h1 {
        color: #343a40;
        margin-bottom: 20px;
    }

    dl.row {
        margin: 0;
    }

    dt {
        font-weight: bold;
        padding-right: 15px;
    }

    dd {
        margin: 0;
        padding: 0;
    }
</style>

<div class="container">
    <h1>Product Details</h1>

    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ProductName)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductName)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Category)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.CategoryName)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Supplier)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Supplier.SupplierName)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.QuantityPerUnit)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.QuantityPerUnit)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.UnitPrice)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.UnitPrice)</dd>
    </dl>

    <div>
        <a asp-action="Edit" asp-route-id="@Model?.ProductId" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

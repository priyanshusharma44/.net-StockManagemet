@model StockManagement.Models.Supplier

@{
    ViewData["Title"] = "Delete Supplier";
}

<style>
    .container {
        padding: 20px;
        max-width: 1200px;
        margin: auto;
    }

    h1 {
        color: #343a40;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 1rem;
        display: flex;
        flex-wrap: wrap;
    }

        .form-group label {
            width: 200px;
            font-weight: bold;
            text-align: right;
            padding-right: 10px;
        }

        .form-group input {
            flex: 1;
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            padding: 0.375rem 0.75rem;
        }

    .btn-danger {
        margin-top: 20px;
    }

    .btn-secondary {
        margin-top: 20px;
    }
</style>

<div class="container">
    <h1>Delete Supplier</h1>
    <div class="form-group">
        <label asp-for="SupplierName" class="control-label"></label>
        <input asp-for="SupplierName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="ContactName" class="control-label"></label>
        <input asp-for="ContactName" class="form-control" readonly />
    </div>
    <!-- Add other fields as necessary -->

    <form asp-action="Delete">
        <input type="hidden" asp-for="SupplierId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

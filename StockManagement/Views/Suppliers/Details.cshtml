@model StockManagement.Models.Supplier

@{
    ViewData["Title"] = "Supplier Details";
}

<style>
    .container {
        padding: 20px;
        max-width: 1200px;
        margin: auto;
    }

    h1 {
        color: #343a40;
        margin-bottom: 20px;
    }

    dl.row {
        margin: 0;
    }

    dt {
        font-weight: bold;
        padding-right: 15px;
    }

    dd {
        margin: 0;
        padding: 0;
    }

    .btn-primary {
        margin-top: 20px;
    }
</style>

<div class="container">
    <h1>Supplier Details</h1>
    <dl class="row">
        <dt class="col-sm-3">Supplier Name</dt>
        <dd class="col-sm-9">@Model.SupplierName</dd>

        <dt class="col-sm-3">Contact Name</dt>
        <dd class="col-sm-9">@Model.ContactName</dd>

        <dt class="col-sm-3">Contact Title</dt>
        <dd class="col-sm-9">@Model.ContactTitle</dd>

        <dt class="col-sm-3">Address</dt>
        <dd class="col-sm-9">@Model.Address</dd>

        <dt class="col-sm-3">City</dt>
        <dd class="col-sm-9">@Model.City</dd>

        <dt class="col-sm-3">Region</dt>
        <dd class="col-sm-9">@Model.Region</dd>

        <dt class="col-sm-3">Postal Code</dt>
        <dd class="col-sm-9">@Model.PostalCode</dd>

        <dt class="col-sm-3">Country</dt>
        <dd class="col-sm-9">@Model.Country</dd>

        <dt class="col-sm-3">Phone</dt>
        <dd class="col-sm-9">@Model.Phone</dd>

        <dt class="col-sm-3">Fax</dt>
        <dd class="col-sm-9">@Model.Fax</dd>

        <dt class="col-sm-3">Home Page</dt>
        <dd class="col-sm-9">@Model.HomePage</dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.SupplierId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

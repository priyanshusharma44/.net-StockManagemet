@model IEnumerable<StockManagement.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}



<div class="container">
    <h1>Suppliers</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Supplier</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Supplier Name</th>
                <th>Contact Name</th>
                <th>Contact Title</th>
                <th>Address</th>
                <th>City</th>
                <th>Region</th>
                <th>Postal Code</th>
                <th>Country</th>
                <th>Phone</th>
                <th>Fax</th>
                <th>Home Page</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var supplier in Model)
            {
                <tr>
                    <td>@supplier.SupplierName</td>
                    <td>@supplier.ContactName</td>
                    <td>@supplier.ContactTitle</td>
                    <td>@supplier.Address</td>
                    <td>@supplier.City</td>
                    <td>@supplier.Region</td>
                    <td>@supplier.PostalCode</td>
                    <td>@supplier.Country</td>
                    <td>@supplier.Phone</td>
                    <td>@supplier.Fax</td>
                    <td>@supplier.HomePage</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@supplier.SupplierId" class="btn btn-warning">Edit</a> 
                        <a asp-action="Details" asp-route-id="@supplier.SupplierId" class="btn btn-info">Details</a> 
                        <a asp-action="Delete" asp-route-id="@supplier.SupplierId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    .page-title {
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    .table {
        width: 100%;
        margin-bottom: 1rem;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 0.75rem;
            vertical-align: top;
            border: 1px solid #dee2e6; /* Border for cells */
        }

        .table thead th {
            vertical-align: bottom;
            border-bottom: 2px solid #dee2e6; /* Thicker border for thead */
        }

    .table-bordered {
        border: 1px solid #dee2e6; /* Border for the entire table */
    }

    .btn {
        text-decoration: none;
        display: inline-block;
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
        font-weight: 400;
        line-height: 1.5;
        text-align: center;
        border-radius: 0.25rem;
        transition: background-color 0.15s ease-in-out, border-color 0.15s ease-in-out;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: 1px solid transparent;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: blue;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
        border: 1px solid transparent;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #4e555b;
        }

    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.75rem;
        border-radius: 0.2rem;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
        border: 1px solid transparent;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }
</style>
@model StockManagement.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<h1 class="page-title">Category Details</h1>

<div class="details-container">
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    <p>
        <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </p>
</div>

<style>
    .page-title {
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    .details-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 1rem;
        background-color: #ffffff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    dl.row {
        margin-bottom: 0;
    }

    dt {
        font-weight: bold;
        border-bottom: 1px solid #dee2e6; /* Border below dt elements */
        padding-bottom: 0.5rem;
    }

    dd {
        margin-bottom: 0.5rem;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: 1px solid transparent;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
        border: 1px solid transparent;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #4e555b;
        }
</style>

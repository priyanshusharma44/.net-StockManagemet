@model StockManagement.Models.StockTransaction

@{
    ViewData["Title"] = "Stock Transaction Details";
}
<style>
    .container {
        padding: 20px;
        max-width: 900px;
        margin: auto;
    }

    h1 {
        color: #343a40;
    }

    .btn-primary, .btn-secondary {
        margin-right: 10px;
    }

    dl {
        margin: 0;
    }

    dt, dd {
        margin: 0;
        padding: 0.5rem 0;
    }
</style>
<h1>Details</h1>

<div>
    <h4>Stock Transaction</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TransactionDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TransactionDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TransactionType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TransactionType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Remarks)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Remarks)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit"   asp-route-id="@Model.TransactionId">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

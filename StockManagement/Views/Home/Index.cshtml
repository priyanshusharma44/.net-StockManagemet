@{
    ViewData["Title"] = "Index Page";
}
<html xmlns="http://www.w3.org/1999/xhtml">
    <head><title></title>
        <style>
   <style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f9fa;
    }

    .container {
          
        margin-top: 20px;
        padding: 20px;
        background-color: #ffffff;

        border-radius: 8px;
    }

    .card-container {

        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .card {

        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .card-content {
            box-shadow: rgb(38, 57, 77) 0px 20px 30px -10px;
        border-radius: 8px; /* Rounded corners */
          
        flex: 1;
        padding: 10px;
        margin: 10px;

    }

    .card h2 {
        margin-top: 0;
    }

    .button-group {
        margin-top: 20px;
    }

    .btn {
        display: inline-block;
        width: 80%;
        padding: 10px;
        background-color: #007bff;
        color: #fff;
        text-align: center;
        border: none;
        border-radius: 4px;
        text-decoration: none;
        margin: 5px 0;
    }

    .btn:hover {
        background-color: #0056b3;
    }

     (max-width: 768px) {
        .card-container {
            grid-template-columns: 1fr;
        }
    }
</style>


    
    
    </head>
    <body>
    <div class="container">
        <div class="card-container">
            <div class="card">
                <div class="card-content">
                    <h2>Categories</h2>
                    <div class="button-group">
                        <a href="@Url.Action("Index", "Categories")" class="btn btn-primary">View Categories</a>
                        <a href="@Url.Action("Create", "Categories")" class="btn btn-primary">Create Category</a>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-content">
                    <h2>Suppliers</h2>
                    <div class="button-group">
                        <a href="@Url.Action("Index", "Suppliers")" class="btn btn-primary">View Suppliers</a>
                        <a href="@Url.Action("Create", "Suppliers")" class="btn btn-primary">Create Supplier</a>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-content">
                    <h2>Products</h2>
                    <div class="button-group">
                        <a href="@Url.Action("Index", "Products")" class="btn btn-primary">View Products</a>
                        <a href="@Url.Action("Create", "Products")" class="btn btn-primary">Create Product</a>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-content">
                    <h2>Stock</h2>
                    <div class="button-group">
                        <a href="@Url.Action("Index", "Stocks")" class="btn btn-primary">View Stock</a>
                        <a href="@Url.Action("Create", "Stocks")" class="btn btn-primary">Create Stock Record</a>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-content">
                    <h2>S.Transaction</h2>
                    <div class="button-group">
                        <a href="@Url.Action("Index", "StockTransactions")" class="btn btn-primary">View S.Transaction</a>
                        <a href="@Url.Action("Create", "StockTransactions")" class="btn btn-primary">Create S.Transaction</a>
                    </div>
                </div>
               
            </div>
            <div class="card">
                <div class="card-content">
                    <h2>Customer</h2>
                    <div class="button-group">
                        <a href="@Url.Action("Index", "Customers")" class="btn btn-primary">View Customers</a>
                        <a href="@Url.Action("Create", "Customers")" class="btn btn-primary">Create Customers</a>
                    </div>
                </div>

            </div>
            <div class="card">
                <div class="card-content">
                    <h2>Orders</h2>
                    <div class="button-group">
                        <a href="@Url.Action("Index", "Orders")" class="btn btn-primary">View Orders</a>
                        <a href="@Url.Action("Create", "Orders")" class="btn btn-primary">Create Orders</a>
                    </div>
                </div>

            </div>
            <div class="card">
                <div class="card-content">
                    <h2>O.Details</h2>
                    <div class="button-group">
                        <a href="@Url.Action("Index", "OrderDetails")" class="btn btn-primary">View O.Details</a>
                        <a href="@Url.Action("Create", "OrderDetails")" class="btn btn-primary">Create O.Details</a>
                    </div>
                </div>

            </div>
        </div>
    </div>

    </body>
</html>
